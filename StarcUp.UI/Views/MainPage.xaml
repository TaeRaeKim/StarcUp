<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="StarcUp.UI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:StarcUp.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundPrimary}">
    
    <Page.Content>
        <Grid>
            <!-- 메인 콘텐츠 -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="30">
                
                <!-- Hello World -->
                <TextBlock Text="Hello, World!" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}" 
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="StarcUp에 오신 것을 환영합니다" 
                           FontSize="18" 
                           Foreground="{StaticResource TextSecondary}" 
                           HorizontalAlignment="Center"/>
                
                <!-- 네비게이션 버튼 -->
                <Button x:Name="ControlTestButton" 
                        Content="🔧 개발자 도구" 
                        Background="{StaticResource ButtonPrimary}" 
                        Foreground="{StaticResource TextPrimary}"
                        BorderThickness="0"
                        Padding="20,12"
                        CornerRadius="8"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Click="ControlTestButton_Click"/>
                
                <Button x:Name="OverlayButton" 
                        Content="🎮 오버레이" 
                        Background="{StaticResource ButtonSecondary}" 
                        Foreground="{StaticResource TextSecondary}"
                        BorderThickness="0"
                        Padding="20,12"
                        CornerRadius="8"
                        FontSize="16"/>
                
                <Button x:Name="SettingsButton" 
                        Content="⚙️ 설정" 
                        Background="{StaticResource ButtonSecondary}" 
                        Foreground="{StaticResource TextSecondary}"
                        BorderThickness="0"
                        Padding="20,12"
                        CornerRadius="8"
                        FontSize="16"/>

            </StackPanel>
        </Grid>
    </Page.Content>
</Page>